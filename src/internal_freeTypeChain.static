#pragma once

#include "internal_split.static"

static void lemonFreeTypeChain(struct LemonSetup **setup)
{
  int ctr = 0;
  LemonSetup *ds = *setup;
  
  /* Free up the resources. */
  for (ctr = ds->est - 1; ctr >= 0; --ctr)
  {
    MPI_Type_free(ds->etype_int[ctr]);
    free(ds->etype_int[ctr]);
  }
  free(ds->etype_int);
  MPI_Type_free(&ds->etype);
  
  free(ds);
  ds = NULL;
}
